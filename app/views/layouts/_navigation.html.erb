<%= link_to 'Chatroom', root_path, class: "item" %> 
<% if logged_in? %> 
  <a class="item">
    <%= current_user.username %> 
  </a>
<% end %> 
<div class="right menu">
  <div class="ui dropdown item">
    Account <i class="dropdown icon"></i>
    <div class="menu">
      <% if logged_in? %> 
        <%= link_to 'Log out', logout_path, data: { turbo_method: :delete, turbo_confirm: "Are you sure" }, class: "item" %> 
      <% else %> 
          <%= link_to 'Log in', login_path, class: "item" %> 
      <% end %> 
    </div>
  </div>
  <% if !logged_in? %> 
    <div class="item">
      <%= link_to 'Log in', login_path, class: "ui inverted yellow button" %> 
    </div>
  <% end %> 
</div> 