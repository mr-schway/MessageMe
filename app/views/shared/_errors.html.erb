<% if obj.errors.any? %> 
  <div class="ui error message">
    <i class="close icon"></i>
    <div class="header"> 
      The following errors prevented the <%= obj.class.name.downcase %> from being saved
    </div>
    <ul class="list">
      <% obj.errors.full_messages.each do |message_content| %>
        <li><%= message_content %></li> 
      <% end %> 
    </ul>
  </div> 
<% end %> 